{% for post in posts %}
    <div class="row mb-2 bg-light" style="border: 1px solid #ddd;">
        <div class="p-3">
            {% if post.image_path is not null %}
                <img src="{{ is_current_url(post.image_path) }}" class="card-img-top" alt="{{ post.title|escape }}">
            {% endif %}
            <div class="mt-3">
                <a href="{{ url_for(post.url_key) }}"><h5 class="card-title">{{ post.title|escape }}</h5></a>
                <span class="text-muted">Andrew Khlybov | {{ post.published_date|date("F d, Y") }}</span>
                <p class="mt-2">{{ post.description|escape }}</p>
                <a href="{{ url_for(post.url_key) }}">Read more</a>
            </div>
        </div>
    </div>
{% endfor %}