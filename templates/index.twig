{% extends 'base.twig' %}

{% block body %}
<div class="container">
    <h1 class="mb-3 mt-3">Welcome to my Blog!</h1>
    {% set rowCount=1 %}
    {% for post in posts %}
        {% if rowCount == 1 %}
        <div class="container row">
        {% endif %}
        <div class="p-1">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="https://dummyimage.com/300x200/685ba6/f7f8ff.jpg" alt="{{ post.title|escape }}">
                <div class="card-body">
                    <h5 class="card-title">{{ post.title|escape }}</h5>
                    <p class="card-text">{{ post.description|escape }}</p>
                    <a href="/blog-post-1" class="btn btn-primary">Read more</a>
                </div>
            </div>
        </div>
        {% if rowCount == 1 %}
        </div>
        {% endif %}
        {% set rowCount += 1 %}
        {% if rowCount > 3 %}
            {% set rowCount = 1 %}
        {% endif %}
    {% endfor %}
</div>
{% endblock %}